#
# Input: m4 output
# Output: Filtered output (.tlv file).
#

use strict;
use warnings;

my $file = $1 ? " of file $1" : "";

my $quote_found = 0;
my $line_num = 0;
while(my $line = <>) {
  $line_num++;

  # Substitute literal commas.
  $line =~ tr/\N{U+05}/,/;

  # Check for quotes.
  if ($line =~ /[\N{U+02}\N{U+03}]/) {
    # Quotes found.
    
    # Report warning.
    print STDERR "Warning: Line $line_num$file: Found unprocessed quotes after M5 macro preprocessing.\n";
    $quote_found = 1;
    # Substitute.
    my $found_open = $line =~ s/\N{U+02}/⌈/g;
    my $found_close = $line =~ s/\N{U+03}/⌉/g;
  }
  print $line;
}

exit $quote_found;